{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "NextApp API",
    "description": "This is a NextApp API definition"
  },
  "servers": [{ "url": "https://api.example.com/api/v1" }],
  "paths": {
    "/user/{userId}": {
      "get": {
        "tags": ["User"],
        "summary": "User取得",
        "description": "登録されているユーザーを一覧で取得します。",
        "parameters": [{ "$ref": "#/components/parameters/UserId" }],
        "responses": {
          "200": {
            "$ref": "#/components/responses/GetUserResponse"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundErrorResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": ["User"],
        "summary": "User登録",
        "description": "ユーザーを登録します。",
        "requestBody": {
          "$ref": "#/components/requestBodies/CreateUserRequestBody"
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/CreateUserResponse"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundErrorResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    },
    "/companies": {
      "get": {
        "tags": ["Company"],
        "summary": "Company一覧取得",
        "description": "登録されているCompanyをページネーション取得します。",
        "parameters": [{ "$ref": "#/components/parameters/CurrentPage" }, { "$ref": "#/components/parameters/Paginate" }],
        "responses": {
          "200": {
            "$ref": "#/components/responses/GetCompaniesResponse"
          },
          "404": {
            "$ref": "#/components/responses/NotFoundErrorResponse"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerErrorResponse"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Paging": {
        "type": "object",
        "required": ["totalPages", "currentPage", "paginate", "total"],
        "properties": {
          "totalPages": { "type": "integer", "title": "総ページ数" },
          "currentPage": { "type": "integer", "title": "取得したページ" },
          "paginate": { "type": "integer", "title": "ページ毎の表示件数" },
          "total": { "type": "integer", "title": "アイテムの総数" }
        }
      },
      "User": {
        "type": "object",
        "required": ["id", "name", "email"],
        "properties": {
          "id": { "type": "string", "title": "ID" },
          "name": { "type": "string", "title": "ユーザー名" },
          "email": { "type": "string", "title": "メールアドレス" }
        }
      },
      "Company": {
        "type": "object",
        "required": ["id", "name", "email"],
        "properties": {
          "id": { "type": "string", "title": "ID" },
          "name": { "type": "string", "title": "企業名" },
          "email": { "type": "string", "title": "メールアドレス" }
        }
      },
      "Companies": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/Company" }
      }
    },
    "parameters": {
      "CurrentPage": {
        "name": "currentPage",
        "in": "query",
        "required": false,
        "description": "現在のページ番号（1〜）",
        "schema": {
          "type": "integer",
          "format": "int32"
        }
      },
      "Paginate": {
        "name": "paginate",
        "in": "query",
        "required": false,
        "description": "ページ毎の表示件数",
        "schema": {
          "type": "integer",
          "format": "int32"
        }
      },
      "UserId": {
        "in": "path",
        "name": "userId",
        "description": "取得したいユーザーIDを指定します。",
        "required": true,
        "schema": { "type": "string" }
      }
    },
    "requestBodies": {
      "CreateUserRequestBody": {
        "required": true,
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["name", "email"],
              "properties": {
                "name": { "type": "string", "title": "ユーザー名" },
                "email": { "type": "string", "title": "メールアドレス" }
              }
            }
          }
        }
      }
    },
    "responses": {
      "GetUserResponse": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/User"
            },
            "examples": {
              "dummy": {
                "value": { "id": 1, "name": "テスト太郎", "email": "test.taro@example.com" }
              }
            }
          }
        }
      },
      "CreateUserResponse": {
        "description": "",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/User"
            },
            "examples": {
              "dummy": {
                "value": { "id": "A0001", "name": "テスト太郎", "email": "test.taro@example.com" }
              }
            }
          }
        }
      },
