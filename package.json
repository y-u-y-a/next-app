{
  "private": true,
  "name": "sample",
  "version": "1.0.0",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prod": "pnpm build && pnpm start",
    "lint": "run-p -c -l lint:**",
    "lint:tsc": "tsc",
    "lint:biome": "pnpm biome lint ./src",
    "format": "pnpm biome format --write ./src",
    "test": "VITE_CJS_IGNORE_WARNING=true vitest run",
    "test:watch": "VITE_CJS_IGNORE_WARNING=true vitest watch",
    "api": "openapi-typescript ./api/schema.json --output ./src/services/api.d.ts",
    "mock": "json-server --watch ./api/mock.json --port 8000"
  },
  "dependencies": {
    "@mantine/core": "7.3.2",
    "@mantine/form": "7.3.2",
    "@mantine/hooks": "7.3.2",
    "@mantine/notifications": "7.3.2",
    "@tabler/icons-react": "^3.2.0",
    "next": "^14.0.1",
    "openapi-fetch": "^0.9.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swr": "^2.2.5",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.16",
    "@vitejs/plugin-react": "^4.2.1",
    "dotenv": "^16.0.3",
    "jsdom": "^24.0.0",
    "json-server": "1.0.0-alpha.23",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^6.7.5",
    "postcss-preset-mantine": "^1.12.3",
    "typescript": "^5.3.2",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0"
  }
}
