{
  "private": true,
  "name": "sample",
  "version": "1.0.0",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "dev": "concurrently -n \"web,mock\" -c \"bgGreen.bold,bgBlue.bold\" \"next dev\" \"pnpm mock\"",
    "build": "next build",
    "start": "next start",
    "prod": "pnpm build && pnpm start",
    "lint": "tsc && pnpm biome lint ./src",
    "fmt": "pnpm biome format --write ./src",
    "test": "VITE_CJS_IGNORE_WARNING=true vitest run",
    "test:watch": "VITE_CJS_IGNORE_WARNING=true vitest watch",
    "api": "openapi-typescript ./openapi/schema.json --output ./src/services/api.d.ts && npx @redocly/cli build-docs ./openapi/schema.json -o ./openapi/index.html",
    "mock": "prism mock ./openapi/schema.json --port 8000"
  },
  "dependencies": {
    "@mantine/core": "7.3.2",
    "@mantine/form": "7.3.2",
    "@mantine/hooks": "7.3.2",
    "@mantine/notifications": "7.3.2",
    "@tabler/icons-react": "^3.2.0",
    "next": "^14.0.1",
    "openapi-fetch": "^0.9.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swr": "^2.2.5",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.0",
    "@stoplight/prism-cli": "^5.8.3",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.16",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.0.3",
    "jsdom": "^24.0.0",
    "openapi-typescript": "^6.7.5",
    "postcss-preset-mantine": "^1.12.3",
    "typescript": "^5.3.2",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0"
  }
}
